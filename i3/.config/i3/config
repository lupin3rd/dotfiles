# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command python3 $HOME/.config/i3/scripts/pystatus.py
        position top
        height 16
        font pango:Hack, FontAwesome 8
        strip_workspace_numbers yes
        colors {
                statusline         $white
                background         $background
                separator          $darkgreen

#                                  BORDER      BACKGROUND  TEXT
                focused_workspace  $background $background $darkgreen
                inactive_workspace $background $background $white
                urgent_workspace   $red        $red        $background
        }
}

